<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/btnSkip"
        android:layout_width=""
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserratmedium"
        android:text="SALTAR"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imgPresent"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/present"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSkip" />


    <TextView
        android:id="@+id/lblBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/montserratbold"
        android:text="Bienvenido"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/imgPresent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/lblParrafo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserratbold"
        android:text="Alumno"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/lblBienvenido"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/txtParrafo"
        android:layout_width="382dp"
        android:layout_height="97dp"
        android:layout_marginTop="12dp"

        android:fontFamily="@font/montserratmedium"
        android:text="En esta aplicación encontraran  implementados varios de los componentes mas utiles de Android Studio "
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblParrafo" />

    <TextView
        android:id="@+id/lblTerminosyCondiciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Términos y Condiciones"
        android:textColor="@color/accent_variant"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/txtParrafo"
        tools:layout_editor_absoluteX="30dp" />

    <LinearLayout
        android:id="@+id/btnSiguiente"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/btn_flecha"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/txtParrafo"
        tools:layout_editor_absoluteX="335dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

